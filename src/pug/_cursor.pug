-
  let size = '140'
      half = size / 2

svg.cursor(
  width= size height= size viewBox=`0 0 ${size} ${size}`
  xmlns="http://www.w3.org/2000/svg"
)
  defs
    filter#Distortion(
      filterUnits="objectBoundingBox"
      x="-50%" y="-50%" width="200%" height="200%"
    )
      feTurbulence(
        type="fractalNoise"
        baseFrequency="0"
        numOctaves="10"
        result="warp"
      )
      feDisplacementMap(
        xChannelSelector="R"
        yChannelSelector="G"
        scale="60"
        in="SourceGraphic"
        in2="warp"
      )
  circle.cursor__inner(cx= half cy= half r="60")
